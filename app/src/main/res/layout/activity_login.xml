<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ducactivity.LoginActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/worldOfStories"
    android:textSize="40sp"
    android:textColor="@color/green2"
    android:textStyle="bold"
    android:paddingVertical="90dp"
    android:gravity="center"

    />
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/green2"
        android:textSize="17sp"
        android:paddingHorizontal="20dp"
        />
    <EditText
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/loginName"
        android:background="@drawable/shape_rectangle_stroke_curved"
        android:padding="20dp"
        android:layout_margin="10dp"
        />
    <EditText
        android:textSize="16sp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:background="@drawable/shape_rectangle_stroke_curved"
        android:padding="20dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:clickable="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotPassword"
        android:textColor="@color/selector_text_green4"
        android:textSize="15sp"
        android:paddingHorizontal="20dp"
        android:layout_gravity="right"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_third"
        android:text="@string/login"
        android:paddingHorizontal="20dp"
        android:textColor="@color/selector_button_text_third"
        />
    <TextView
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orLoginWith"
        android:textColor="@color/selector_text_green4"

        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:textSize="15sp"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_google"
        android:scaleType="centerCrop"
        android:background="@drawable/image_button_search_slector"
        android:layout_gravity="center"
        />
<LinearLayout
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dontHaveAnAcctount"
        android:textSize="15sp"

        />
    <TextView
        android:textSize="15sp"
        android:clickable="true"

        android:layout_marginHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUp"
        android:textColor="@color/selector_text_green2"
        />
</LinearLayout>

</LinearLayout>