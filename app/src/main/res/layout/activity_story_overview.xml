<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ducactivity.StoryOverviewActivity"
    android:fitsSystemWindows="true"
    >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageButton
        android:id="@+id/btnBack_sotryOverview"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_back"
        android:background="@drawable/image_button_search_slector"
        />

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="20dp"

        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:elevation="15dp"
        android:translationZ="10dp"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/a1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/imgStory_storyOverview"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:background="@drawable/shape_story_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/a2" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="@color/green2"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="4.5"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Hay qua troi"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ten tac gia"
            android:textSize="18sp"
            android:textStyle="normal" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_button_text_color_primary"
                android:text="vui ve"
                android:background="@drawable/shape_button_primary"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:padding="10dp"

                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_button_text_color_primary"
                android:text="kich tinh"
                android:background="@drawable/shape_button_primary"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:padding="10dp"

                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_button_text_color_primary"
                android:text="Lang man"
                android:background="@drawable/shape_button_primary"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_button_text_color_primary"
                android:text="Nhan van qua"
                android:background="@drawable/shape_button_primary"

                />
        </com.google.android.flexbox.FlexboxLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green1"
            android:layout_margin="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/selector_icon_button_love"
            android:text="@string/buttonLoveStoryOverview"
            android:background="@drawable/shape_button_secondary"
            android:textColor="@color/selector_button_text_color_secondy"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginVertical="10dp"
            android:textColor="@color/selector_button_text_color_secondy"

            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/buttonReadFromChapter1StoryOverview"
            android:background="@drawable/shape_button_secondary"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green1"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            />
        <LinearLayout
            android:id="@+id/lineaerlistChapter_storyOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>