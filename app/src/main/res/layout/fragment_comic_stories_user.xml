<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComicStories_User_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <LinearLayout
        android:id="@+id/linearLayout_fragment_comicStoryUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
    android:orientation="vertical"

        >
        <SearchView
            android:id="@+id/search_comicStoriesUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Nhập tên truyện"
            android:queryBackground="@color/skin"
            android:inputType="text"
            android:layout_marginVertical="10dp"
            />
<TextView
    android:id="@+id/txtTestList1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/skin"
    />
        <TextView
            android:id="@+id/txtTestList2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_buttonGenre_ComicStoriesUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green1"/>

    </LinearLayout>


        <ListView
            android:layout_marginTop="60dp"
            android:id="@+id/listSearch_comicStoriesUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:background="@color/white"
            android:visibility="gone"
            android:elevation="20dp"
            />
    </FrameLayout>
</ScrollView>